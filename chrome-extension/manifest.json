{
  "manifest_version": 3,
  "name": "小黃標-Threads User Location Tag",
  "version": "0.9.0",
  "description": "可以將 Threads 用戶所在地資訊，自動顯示在小黃標籤上。 Automatically extracts and reveals location-related text from Threads posts for quick identification.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "debugger",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["queryManager.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Threads Location Revealer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
